            <div class="transparency-section--carousel--items--item">
                <div class="transparency-section--carousel--items--item--img">
                    {{ 'eco-packaging.png' | file_url | img_tag }}
                </div>
                <h4 class='transparency-section--carousel--items--item--title'>Eco-packaging</h4>
                <p class='transparency-section--carousel--items--item--price'>$2</p>
